@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Role";
}

<div style="width: 600px;" class="container justify-content-center">
    <h3 class="text-center mb-4">Listado de Roles</h3>
    <p><a asp-controller="Role" asp-action="AddRole" class="btn btn-primary w-100">Agregar Role</a></p>
    @if (Model == null)
    {
        <p>Cargando datos. Espere por favor...</p>
    }
    else if(Model.Count() == 0)
    {
        <p>No hay Roles en la BBDD todavía.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-dark text-center">
                    <th scope="col">Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
