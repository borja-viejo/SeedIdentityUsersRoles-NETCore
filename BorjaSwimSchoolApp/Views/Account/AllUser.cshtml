@using BorjaSwimSchoolApp.ViewModels
@model List<AccountAllUserViewModel>
@{
    ViewData["Title"] = "All User";
}

<div style="width: 780px;" class="container justify-content-center">
    <h3 class="text-center mb-4">Listado de Usuarios</h3>
    <p><a asp-controller="Account" asp-action="Register" class="btn btn-primary w-100">Agregar nuevo Usuario</a></p>
    @if (Model == null)
    {
        <p>Cargando datos. Espere por favor...</p>
    }
    else if(Model.Count() == 0)
    {
        <p>No hay Usuarios en la BBDD todavía.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-dark">
                    <th scope="col">Nombre de usuario</th>
                    <th scope="col">Role</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var user in Model)
                {
                    <tr>
                        <td>@user.User</td>
                        <td>@user.Role</td>
                        <td>
                            <a asp-controller="Role" asp-action="AddUserRole"
                                asp-route-id="@user.User.Id"
                                class="btn btn-success rounded-pill">
                                Asignar Role
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Role" asp-action="DeleteUserRole"
                                asp-route-id="@user.User.Id" asp-route-role="@user.Role"
                                class="btn btn-danger rounded-pill">
                                Eliminar Role
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
