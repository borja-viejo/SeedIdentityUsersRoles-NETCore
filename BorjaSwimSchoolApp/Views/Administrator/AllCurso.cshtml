@using BorjaSwimSchoolApp.Models
@model IEnumerable<Curso>
@{
    ViewData["Title"] = "All Curso";
}

<div style="width: 600px;" class="container justify-content-center">
    <h3 class="text-center mb-4">Listado de Cursos</h3>
    <p><a asp-controller="Administrator" asp-action="AddCurso" class="btn btn-primary w-100">Agregar Curso</a></p>
    @if (Model == null)
    {
        <p>Cargando datos. Espere por favor...</p>
    }
    else if(Model.Count() == 0)
    {
        <p>No hay Cursos en la BBDD todavía.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-dark">
                    <th scope="col">ID</th>
                    <th scope="col">Nivel</th>
                    <th scope="col">Entrenador</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var curso in Model)
                {
                    <tr>
                        <th scope="row">@curso.CursoId</th>
                        <td>@curso.Nivel</td>
                        <td>@curso.Entrenador.Nombre @curso.Entrenador.Apellido</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
